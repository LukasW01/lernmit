<.header>
  Task <%= @task.id %>
  <:subtitle>This is a task record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/task/#{@task}/show/edit"} phx-click={JS.push_focus()}>
      <%= if Policy.authorize?(:task_update, @current_user) do %>
        <.button>Edit task</.button>
      <% else %>
        <.button disabled>Edit task</.button>
      <% end %>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Title"><%= @task.title %></:item>
  <:item title="Text"><%= @task.text %></:item>
  <:item title="Status"><%= @task.status %></:item>
  <:item title="Types"><%= @task.types %></:item>
  <:item title="Due date"><%= @task.due_date %></:item>
  <:item title="Points"><%= @task.points %></:item>
</.list>

<.back navigate={~p"/task"}>Back to task</.back>

<.modal :if={@live_action == :edit} id="task-modal" show on_cancel={JS.patch(~p"/task/#{@task}")}>
  <.live_component
    module={LernmitWeb.TaskLive.FormComponent}
    id={@task.id}
    title={@page_title}
    action={@live_action}
    task={@task}
    patch={~p"/task/#{@task}"}
  />
</.modal>
